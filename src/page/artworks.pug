doctype html
head
    meta(charset='UTF-8')
    meta(content='IE=edge' http-equiv='X-UA-Compatible')
    meta(content='width=device-width,initial-scale=1' name='viewport')
    meta(content='Page description' name='description')
    meta(name='google' content='notranslate')
    meta(name='msapplication-tap-highlight' content='no')
    link(rel="icon" type="image/x-icon" href="../img/logo-no-text.png")
    link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
    title Artwork Manager
body 
    include ./layout/sidebar.layout.pug
    section#content
        include ./layout/header.layout.pug
        main#artwork-manage 
            .container 
                .artwork-table
                    table 
                        thead   
                            tr
                                th Image
                                th Name
                                th Description
                                th Premium 
                                th Status
                                th Action
                        tbody.artworks-data

            #artwork-manage-paging
                button#prev-manage.btn-prev
                    i(class='bx bx-chevron-left')
                    | Previous Page
                button#next-manage.btn-next
                    | Next Page
                    i(class='bx bx-chevron-right')
        include ./layout/footer.layout.pug

    script(src="../js/style-sidebar.js") 
    script(src="../bundle.js") 
    script(type="module" src="../js/artworks.js") 