doctype html
head
    meta(charset='UTF-8')
    meta(content='IE=edge' http-equiv='X-UA-Compatible')
    meta(content='width=device-width,initial-scale=1' name='viewport')
    meta(content='Page description' name='description')
    meta(name='google' content='notranslate')
    meta(name='msapplication-tap-highlight' content='no')
    link(rel="icon" type="image/x-icon" href="../img/logo-no-text.png")
    link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
    title Dashboard
body 
    include ./layout/sidebar.layout.pug
    section#content
        include ./layout/header.layout.pug
        main#dashboard
            ul.box-info
                li.box-card
                    .card
                        i.bx.bx-palette
                        span.text
                            h3#artwork-count 1020
                            p#artwork-text Artworks
                li.box-card
                    .card
                        i.bx.bx-user
                        span.text
                            h3#user-count 1020
                            p#user-text Users
                li.box-card
                    .card
                        i.bx.bx-basket
                        span.text
                            h3#order-count 1020
                            p#order-text Orders
                li.box-card
                    .card
                        i.bx.bx-dollar
                        span.text
                            h3#profit-count 1020
                            p#profit-text Profit
        main#dashboard-table-list
            .table-holder
                p.title Top 10 newest users
                table.user-table-data 
                    thead 
                        tr 
                            th Role
                            th Username
                            th Email
                            th Join Date 
                    tbody.user-list

            .table-holder
                p.title Top 10 newest order
                table.order-table-data 
                    thead 
                        tr 
                            th Order ID
                            th Order Date
                            th Total
                            th Status 
                    tbody.order-list

        main#artwork
            p.title Top 8 newest artworks
            .card-holder
        include ./layout/footer.layout.pug


    script(src="/js/style-sidebar.js") 
    script(src="/bundle.js") 
    script(type="module" src="/js/dashboard.js") 