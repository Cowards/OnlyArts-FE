doctype html
head
    meta(charset='UTF-8')
    meta(content='IE=edge' http-equiv='X-UA-Compatible')
    meta(content='width=device-width,initial-scale=1' name='viewport')
    meta(content='Page description' name='description')
    meta(name='google' content='notranslate')
    meta(name='msapplication-tap-highlight' content='no')
    link(rel="icon" type="image/x-icon" href="../img/logo-no-text.png")
    link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
    title Discover
body 
    include ./layout/sidebar.layout.pug
    section#content
        include ./layout/header.layout.pug
        section#category
            button.filter-btn Category Filter
                i.bx.bx-filter
            form#category-form(action="")
                .form-input-block
                    each val, index in ['All','AbstractStyle', 'Animation', 'Basic', 'Classic', 'Complex', 'Digital', 'DigitalTech', 'Expressionism', 'Fabric', 'FamousPortrait', 'Impressionism', 'Interior', 'Modern', 'Natural', 'Paper', 'Pastel', 'Realistic', 'Sketch', 'Traditional', 'Urban', 'Wall', 'Watercolor', 'Wood', 'Abstract', 'Acrylic', 'Charcoal', 'Comic', 'Landscape', 'Oil', 'Pencil', 'Portrait', 'StillLife', 'Fantasy']
                        .form-input
                            input.cate-checkbox(type="checkbox" id=val name="category" value=val)
                            label(for=val) #{val}
        main#artwork
            .card-holder
                
        include ./layout/footer.layout.pug
    script(src="/js/style-discover.js")
    script(src="/js/style-sidebar.js") 
    script(src="/bundle.js") 
    script(type="module" src="/js/discover.js") 